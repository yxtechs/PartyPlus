<!-- newevent.wxml -->
<view>
  <view class="left">
    <label>活动编号:</label>
    <text>{{eventId}}</text>
  </view>
  <view class="left">
    <label>活动名称:</label>
    <text>{{eventSet.name}}</text>
  </view>
  <view class="left">
    <label>活动时间:</label>
    <text>{{eventSet.time}}</text>
  </view>
  <view class="left">
    <label>活动地点:</label>
    <text>{{eventSet.localtion}}</text>
  </view>
  <view class="left">
    <label>参与人数:</label>
    <text>{{eventSet.attendNum}}／{{eventSet.totalNum}}</text>
  </view>
  <view wx:if="{{showButton}}" class="left">
    <button>参加</button>
  </view>
</view>