<!-- newevent.wxml -->
<view>
  <view class="left">
    <label>活动编号:</label>
    <text>{{eventId}}</text>
  </view>
  <view class="left">
    <label>活动名称:</label>
    <text>{{eventSet.party_name}}</text>
  </view>
  <view class="left">
    <label>活动时间:</label>
    <text>{{eventSet.party_time}}</text>
  </view>
  <view class="left">
    <label>活动地点:</label>
    <text>{{eventSet.party_location}}</text>
  </view>
  <view class="left">
    <label>参与人数:</label>
    <text>{{eventSet.party_attend_num}}/{{eventSet.party_total_num}}</text>
  </view>

  <view wx:if="{{showButton}}">
      <view class="left">
        <image style="width: 300px; height: 30px;" mode="bottom left" src="../../resource/img/breakline.png"></image>
      </view>
      <form bindsubmit="bindButtonTap">
      <view class="left">
        <label><text style="color : red">*</text>姓名:</label>
        <input name="attendee_name" placeholder="请输入姓名"/>
      </view>
      <view class="left">
        <label><text style="color : red">*</text>联系方式:</label>
        <input name="tel_no" placeholder="请输入手机号码"/>
      </view>
      <view class="left">
        <button formType="submit">参加</button>
      </view>
      </form>
  </view>
</view>